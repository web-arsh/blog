<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Post Creation</title>
  </head>
  <body>
    <%- include("../partials/navbar") %>
    <div class="form-container">
      <!-- icon -->
      <h1 id="addpost">
        Add Post
        <!-- add icon -->
        <i class="fas fa-plus"></i>
      </h1>
      <% if (error) { %>
        <small class="error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </small>
      <% } %>
      <form action="/api/v1/posts" method="POST" enctype="multipart/form-data">
        <!-- Post Title -->
        <div class="input-wrapper">
          <label for="name">Post Title</label>
          <input type="text" name="title" id="name" />
          <!-- err -->
        </div>

        <!-- Category -->
        <div class="input-wrapper">
          <label for="category">Category</label>
          <select name="category" id="category">
            <option value="Web Development">Web Development</option>
            <option value="Tech Gadgets">Tech Gadgets</option>
            <option value="Business">Business</option>
            <option value="Health & Wellness">Health & Wellness</option>
          </select>
          <!-- err -->
        </div>
        <div class="input-wrapper">
          <!-- Post Body -->
          <label for="body">Post Body</label>
          <textarea name="description" id="body" cols="30" rows="10"></textarea>
          <!-- err -->
        </div>
        <!-- Post Image -->
        <div class="input-wrapper">
          <label for="image">Post Image</label>
          <input type="file" name="post-image" id="image" />
          <!-- err -->
        </div>

        <button type="submit">Create</button>
  
      </form>
    </div>
    <%- include("../partials/footer") %>
  </body>
</html>
