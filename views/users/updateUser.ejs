<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/css/form.css" />
    <title>Update User</title>
  </head>
  <body>
    <!-- nav-bar -->
    <%- include("../partials/navbar") %>

    <div class="form-container">
      <!-- icon -->
      <h1>
        Update User Form
        <i class="fas fa-user-plus"></i>
      </h1>

      <% if (error) { %>
        <small class="error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </small>
      <% } %>
      <form action="/api/v1/users/update/?_method=PUT" method="POST" enctype="application/x-www-form-urlencoded">
        <!-- full name -->
        <label for="name">Full Name</label>
        <input type="text" name="fullname" id="name" placeholder="<%= user?.fullname %>" />
        <!-- email -->
        <label for="email">Email</label>
        <input type="email" name="email" id="email" placeholder="<%= user?.email %>"/>

        <button type="submit">Update</button>
      </form>
    </div>
  <!-- footer -->
  <%- include("../partials/footer") %>
  </body>
</html>
